{
  "post": {
    "operationId": "resetPassword",
    "tags": ["auth"],
    "parameters": [
      {
        "name": "body",
        "in": "body",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "phone": { "type": "string", "example": "+905079026718" },
            "token": {
              "type": "string",
              "example": "a658ea02f5e6d05ca36a2be90bb7e0..."
            },
            "newPassword": {
              "type": "string",
              "example": "adminadmin"
            }
          },
          "required": ["phone", "token", "newPassword"]
        }
      }
    ],

    "responses": {
      "200": {
        "description": "Password updated successfully",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "example": "Password updated successfully"
            }
          },
          "required": ["message"]
        }
      },
      "401": {
        "description": "Invalid credentials",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "example": "Invalid credentials"
            }
          }
        }
      },
      "500": {
        "description": "Internal server error",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "example": "Failed to update password"
            }
          }
        }
      }
    }
  }
}
