{
  "post": {
    "operationId": "sendResetPasswordLink",
    "tags": ["auth"],
    "security": [
      {
        "tempTokenHeader": []
      }
    ],
    "parameters": [
      {
        "name": "body",
        "in": "body",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "phone": { "type": "string", "example": "+905079026718" }
          },
          "required": ["phone"]
        }
      }
    ],

    "responses": {
      "200": {
        "description": "Reset password link sent successfully",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "example": "Reset password link sent successfully"
            },
            "expiresAt": {
              "type": "string",
              "example": "2025-08-11T12:00:00.000Z"
            }
          },
          "required": ["message", "expiresAt"]
        }
      },
      "401": {
        "description": "Invalid credentials",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "example": "Invalid credentials"
            }
          }
        }
      },
      "500": {
        "description": "Internal server error",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "example": "Failed to create reset password link"
            }
          }
        }
      }
    }
  }
}
