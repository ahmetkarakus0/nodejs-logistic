{
  "swagger": "2.0",
  "info": {
    "title": "Logistic App API",
    "description": "API documentation for the Logistic App - a comprehensive logistics management system with authentication, user management, and customer operations.",
    "version": "1.0"
  },
  "produces": ["application/json"],
  "host": "localhost:8000",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "auth",
      "description": "Authentication and authorization endpoints"
    },
    {
      "name": "customer",
      "description": "Customer management operations"
    },
    {
      "name": "customer-locations",
      "description": "Customer locations management operations"
    }
  ],
  "securityDefinitions": {
    "tempTokenHeader": {
      "type": "apiKey",
      "in": "header",
      "name": "tempToken",
      "description": "Temporary token for two-factor authentication"
    },
    "bearerAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization",
      "description": "Authorization header using the Bearer scheme. Example: \"Bearer {token}\""
    },
    "refreshTokenHeader": {
      "type": "apiKey",
      "in": "header",
      "name": "refreshToken",
      "description": "Refresh token for authentication"
    }
  },
  "paths": {
    "/auth/register": {
      "$ref": "paths/auth/register.json"
    },
    "/auth/two-factor-auth": {
      "$ref": "paths/auth/two-factor-auth.json"
    },
    "/auth/verify-two-factor-code": {
      "$ref": "paths/auth/verify-two-factor-code.json"
    },
    "/auth/send-reset-password-link": {
      "$ref": "paths/auth/send-reset-password-link.json"
    },
    "/auth/reset-password": {
      "$ref": "paths/auth/reset-password.json"
    },
    "/auth/refresh-token": {
      "$ref": "paths/auth/refresh-token.json"
    },
    "/auth/logout": {
      "$ref": "paths/auth/logout.json"
    },
    "/customer": {
      "get": {
        "$ref": "paths/customer/list.json"
      },
      "post": {
        "$ref": "paths/customer/create.json"
      }
    },
    "/customer/{id}": {
      "put": {
        "$ref": "paths/customer/update.json"
      },
      "delete": {
        "$ref": "paths/customer/delete.json"
      }
    },
    "/customer-locations": {
      "get": {
        "$ref": "paths/customer-locations/list.json"
      },
      "post": {
        "$ref": "paths/customer-locations/create.json"
      }
    },
    "/customer-locations/{id}": {
      "put": {
        "$ref": "paths/customer-locations/update.json"
      },
      "delete": {
        "$ref": "paths/customer-locations/delete.json"
      }
    }
  }
}
