{
  "post": {
    "operationId": "twoFactorAuth",
    "tags": ["auth"],
    "parameters": [
      {
        "name": "body",
        "in": "body",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "phone": { "type": "string", "example": "+905079026718" },
            "password": { "type": "string", "example": "adminadmin" }
          },
          "required": ["phone", "password"]
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Two factor authentication successful",
        "schema": {
          "type": "object",
          "properties": {
            "user": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "surname": { "type": "string" },
                "phone": { "type": "string" },
                "role": {
                  "type": "string",
                  "enum": ["admin", "driver", "customer"]
                }
              }
            },
            "tempToken": { "type": "string" },
            "message": { "type": "string" }
          }
        },
        "examples": {
          "application/json": {
            "user": {
              "name": "John",
              "surname": "Doe",
              "phone": "+905079026718",
              "role": "admin"
            },
            "tempToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
            "message": "Two factor code sent successfully"
          }
        }
      },
      "401": {
        "description": "Invalid credentials",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "example": "Invalid credentials"
            }
          }
        }
      },
      "500": {
        "description": "Failed to send two factor code",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "example": "Failed to send two factor code"
            }
          }
        }
      }
    }
  }
}
